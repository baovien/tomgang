@model Item

<img 
    src="@Model.imgPath" 
    id="@Model.Id" 
    class="itemImg img-thumbnail" 
    style="display: none" 
    draggable="false"
    data-cost="@Model.cost"
    data-income="@Model.income"
    data-content="Cost: @Model.cost, Income: @Model.income" 
    rel="popover" 
    data-placement="bottom" 
    data-original-title="@Model.Id" 
    data-trigger="hover">
</img>



