@model Item

<img 
    src="@Model.imgPath" 
    id="@Model.Id" 
    class="itemImg img-thumbnail" 
    style="display: none" 
    draggable="false"
    data-name="@Model.Id"
    data-startingprice="@Model.cost"
    data-cost="@Model.cost"
    data-income="@Model.income"
    data-content="@Model.description" 
    data-placement="bottom" 
    data-original-title="@Model.Id - Price: @Model.cost" 
    rel="popover" 
    data-trigger="hover">
</img>



