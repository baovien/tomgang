@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData[" ReturnUrl "]" method="post" class="form-horizontal" id="loginn">
    <h4>Log in to your Tomgang account</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <input asp-for="BrukerNavn" class="form-control" placeholder="Username" required/>
            <span asp-validation-for="BrukerNavn" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <input asp-for="Password" class="form-control" placeholder="Password" required/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="checkbox">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default" id="loginknapp">Log in</button>
        </div>
    </div>
    <p>
        <a asp-action="ForgotPassword">Forgot your password?</a>
    </p>
</form>
